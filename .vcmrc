{
  "types": [
    "feat",
    "fix",
    "docs",
    "style",
    "refactor",
    "perf",
    "test",
    "build",
    "ci",
    "chore",
    "revert"
  ],
  "scope": {
    "required": false,
    "allowed": ["*"],
    "validate": true,
    "multiple": false
  },
  "warnOnFail": false,
  "maxSubjectLength": 100,
  "subjectPattern": "^[a-z].+[^.]$$",
  "subjectPatternErrorMsg": "Subject should start with a lower-case char and not end with a period",
  "helpMessage": "",
  "autoFix": false
}
