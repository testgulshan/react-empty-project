{
  "rules": {
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".jsx", ".test.js", ".stories.js"] }
    ]
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["airbnb", "eslint:recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["react", "jsx-a11y", "react", "react-hooks", "prettier"]
}
